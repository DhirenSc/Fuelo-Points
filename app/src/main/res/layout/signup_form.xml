<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/BaapLL">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" android:orientation="vertical"
            android:id="@+id/main_ll"
            android:background="#6084b4"
            android:weightSum="1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Sign Up"
                android:id="@+id/label_register"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textStyle="bold"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:id="@+id/register_button"
                android:background="#c32026"
                android:textColor="#fff"
                android:layout_marginTop="20dp"
                android:onClick="registerPost"

                />


            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Name"
                android:id="@+id/label_eventname"
                android:layout_gravity="left"
                android:textColor="#fff"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eventname_reg"
                android:textColor="#fff"
                android:theme="@style/MyEditTextTheme"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Email"
                android:id="@+id/label_venuename"
                android:layout_gravity="left"
                android:textColor="#fff"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/venuename_reg"
                android:textColor="#fff"
                android:theme="@style/MyEditTextTheme"

                />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Password"
                android:id="@+id/label_password"
                android:layout_gravity="left"
                android:textColor="#fff"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password_reg"
                android:textColor="#fff"
                android:theme="@style/MyEditTextTheme"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Repeat Password"
                android:id="@+id/label_reppassword"
                android:layout_gravity="left"
                android:textColor="#fff"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/reppassword_reg"
                android:textColor="#fff"
                android:theme="@style/MyEditTextTheme"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Car / Bike Details"
                android:layout_gravity="center"
                android:id="@+id/label_cardetails"
                android:textColor="#fff"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_camera_white_24dp"
                    android:onClick="addCar"
                    android:layout_weight="1"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_camera_white_24dp"
                    android:onClick="removeCar"
                    android:layout_weight="1"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:orientation="horizontal"
                android:id="@+id/Car_Details_1">

                <EditText
                    android:layout_width="200px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/ed1a"/>
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/ed1b"
                    android:layout_width="200px"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:orientation="horizontal"
                android:id="@+id/Car_Details_2"
                android:visibility="gone">

                <EditText
                    android:layout_width="200px"
                    android:layout_height="wrap_content"
                    android:id="@+id/ed2a"
                    android:layout_weight="1"/>
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/ed2b"
                    android:layout_width="200px"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:orientation="horizontal"
                android:id="@+id/Car_Details_3"
                android:visibility="gone">

                <EditText
                    android:layout_width="200px"
                    android:layout_height="wrap_content"
                    android:id="@+id/ed3a"
                    android:layout_weight="1"/>
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/ed3b"
                    android:layout_width="200px"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:orientation="horizontal"
                android:id="@+id/Car_Details_4"
                android:visibility="gone">

                <EditText
                    android:layout_width="200px"
                    android:id="@+id/ed4a"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/ed4b"
                    android:layout_width="200px"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:orientation="horizontal"
                android:id="@+id/Car_Details_5"
                android:visibility="gone">

                <EditText
                    android:layout_width="200px"
                    android:id="@+id/ed5a"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/ed5b"
                    android:layout_width="200px"
                    android:layout_height="wrap_content" />

            </LinearLayout>





        </LinearLayout>
    </ScrollView>
</LinearLayout>