<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/BaapLL"
    android:background="#121121">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollX"
        >


        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" android:orientation="vertical"
            android:id="@+id/main_ll"

            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="fuelopoints"
                    android:textStyle="bold"
                    android:id="@+id/label_points"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="60dp"></TextView>

            </LinearLayout>



            <EditText
                android:layout_width="match_parent"
                android:textColorLink="#fff"
                android:layout_height="50dp"
                android:id="@+id/name_reg"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#ffffff"
                android:hint="Name"
                android:gravity="center"
                android:textColorHint="#fff"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonbg"
                android:theme="@style/MyEditTextTheme"/>
            <EditText
                android:layout_width="match_parent"
                android:textColorLink="#fff"
                android:layout_height="50dp"
                android:id="@+id/email_reg"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#ffffff"
                android:hint="Email"
                android:gravity="center"
                android:textColorHint="#fff"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttonbg"
                android:theme="@style/MyEditTextTheme"/>



            <EditText
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:textColorLink="#fff"
                android:layout_height="50dp"
                android:id="@+id/password_reg"

                android:layout_marginTop="10dp"
                android:hint="Password"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textColorHint="#fff"
                android:background="@drawable/buttonbg"
                android:theme="@style/MyEditTextTheme"
                android:inputType="textPassword"
                android:ems="10"/>
            <EditText
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:textColorLink="#fff"
                android:layout_height="50dp"
                android:id="@+id/reppassword_reg"

                android:layout_marginTop="10dp"
                android:hint="Repeat Password"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textColorHint="#fff"
                android:background="@drawable/buttonbg"
                android:theme="@style/MyEditTextTheme"
                android:inputType="textPassword"
                android:ems="10"/>












            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Car / Bike Details"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:id="@+id/label_cardetails"
                android:layout_marginTop="10dp"
                android:textStyle="bold|italic"

                android:textColor="#fff"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom">
                    <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:elevation="10dp"
                        android:src="@drawable/ic_add_circle_white_24dp"
                        app:backgroundTint="#FB9800"
                        android:onClick="addCar"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom">
                    <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:elevation="10dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_remove_circle_white_24dp"
                        app:backgroundTint="#FB9800"
                        android:onClick="removeCar"/>
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/Car_Details_1">
                <EditText
                    android:layout_width="250px"
                    android:textColorLink="#fff"
                    android:layout_height="50dp"
                    android:id="@+id/ed1a"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#ffffff"
                    android:hint="Car Name"
                    android:gravity="center"
                    android:textColorHint="#fff"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttonbg"
                    android:theme="@style/MyEditTextTheme"/>


                <EditText
                    android:layout_width="250px"
                    android:textColorLink="#fff"
                    android:layout_height="50dp"
                    android:id="@+id/ed1b"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#ffffff"
                    android:hint="Car Type"
                    android:gravity="center"
                    android:textColorHint="#fff"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttonbg"
                    android:theme="@style/MyEditTextTheme"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/Car_Details_2"
                android:layout_marginTop="15dp"
                android:visibility="gone">

                <EditText
                    android:layout_width="250px"
                    android:textColorLink="#fff"
                    android:layout_height="50dp"
                    android:id="@+id/ed2a"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#ffffff"
                    android:hint="Car Name"
                    android:gravity="center"
                    android:textColorHint="#fff"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttonbg"
                    android:theme="@style/MyEditTextTheme"/>


                <EditText
                    android:layout_width="250px"
                    android:textColorLink="#fff"
                    android:layout_height="50dp"
                    android:id="@+id/ed2b"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#ffffff"
                    android:hint="Car Type"
                    android:gravity="center"
                    android:textColorHint="#fff"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttonbg"
                    android:theme="@style/MyEditTextTheme"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/Car_Details_3"

                android:layout_marginTop="15dp"
                android:visibility="gone">

                <EditText
                    android:layout_width="250px"
                    android:textColorLink="#fff"
                    android:layout_height="50dp"
                    android:id="@+id/ed3a"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#ffffff"
                    android:hint="Car Name"
                    android:gravity="center"
                    android:textColorHint="#fff"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttonbg"
                    android:theme="@style/MyEditTextTheme"/>


                <EditText
                    android:layout_width="250px"
                    android:textColorLink="#fff"
                    android:layout_height="50dp"
                    android:id="@+id/ed3b"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#ffffff"
                    android:hint="Car Type"
                    android:gravity="center"
                    android:textColorHint="#fff"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttonbg"
                    android:theme="@style/MyEditTextTheme"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/Car_Details_4"
                android:layout_marginTop="15dp"
                android:visibility="gone">

                <EditText
                    android:layout_width="250px"
                    android:textColorLink="#fff"
                    android:layout_height="50dp"
                    android:id="@+id/ed4a"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#ffffff"
                    android:hint="Car Name"
                    android:gravity="center"
                    android:textColorHint="#fff"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttonbg"
                    android:theme="@style/MyEditTextTheme"/>


                <EditText
                    android:layout_width="250px"
                    android:textColorLink="#fff"
                    android:layout_height="50dp"
                    android:id="@+id/ed4b"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#ffffff"
                    android:hint="Car Type"
                    android:gravity="center"
                    android:textColorHint="#fff"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttonbg"
                    android:theme="@style/MyEditTextTheme"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:id="@+id/Car_Details_5"
                android:visibility="gone"
                >

                <EditText
                    android:layout_width="250px"
                    android:textColorLink="#fff"
                    android:layout_height="50dp"
                    android:id="@+id/ed5a"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#ffffff"
                    android:hint="Car Name"
                    android:gravity="center"
                    android:textColorHint="#fff"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttonbg"
                    android:theme="@style/MyEditTextTheme"/>


                <EditText
                    android:layout_width="250px"
                    android:textColorLink="#fff"
                    android:layout_height="50dp"
                    android:id="@+id/ed5b"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#ffffff"
                    android:hint="Car Type"
                    android:gravity="center"
                    android:textColorHint="#fff"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttonbg"
                    android:theme="@style/MyEditTextTheme"/>

            </LinearLayout>






        </LinearLayout>

    </ScrollView>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:elevation="10dp"
            android:src="@drawable/ic_check_circle_white_24dp"
            app:backgroundTint="#00BF00"
            android:onClick="registerUser"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"

            />


</RelativeLayout>